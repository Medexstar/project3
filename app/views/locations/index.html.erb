<h1 class="text-center">Listing All Locations</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="text-center">ID</th>
      <th class="text-center">Lat</th>
      <th class="text-center">Long</th>
      <th class="text-center">Last Updated</th>
    </tr>
  </thead>

  <tbody>
    <% @hash[:locations].each do |location| %>
      <tr>
        <td class="text-center"><%= location[:id] %></td>
        <td class="text-center"><%= location[:lat] %></td>
        <td class="text-center"><%= location[:lon] %></td>
        <td class="text-center"><%= location[:last_update] %></td>
      </tr>
    <% end %>
  </tbody>
</table>