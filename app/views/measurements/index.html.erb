<p id="notice"><%= notice %></p>

<h1>Listing Measurements</h1>

<table>
  <thead>
    <tr>
      <th>Temp</th>
      <th>Percip intensity</th>
      <th>Wind speed</th>
      <th>Wind direction</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurements.each do |measurement| %>
      <tr>
        <td><%= measurement.temp %></td>
        <td><%= measurement.percip_intensity %></td>
        <td><%= measurement.wind_speed %></td>
        <td><%= measurement.wind_direction %></td>
        <td><%= measurement.time %></td>
        <td><%= link_to 'Show', measurement %></td>
        <td><%= link_to 'Edit', edit_measurement_path(measurement) %></td>
        <td><%= link_to 'Destroy', measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

